{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "module": "nodeNext",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "design-system/*": ["src/*"]
    }
  },
  "include": ["src", "tailwind.config.js", "postcss.config.js"],
  "exclude": ["node_modules", "dist"]
}
