{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "design-system/*": ["./src/*"]
    }
  },
  "include": ["src", "tailwind.config.js", "postcss.config.js", "src/custom.d.ts"],
  "exclude": ["node_modules", "dist"]
}
